@page
@model BraydensTravelJournal.Pages.Journals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Name Search: <input type="search" name="searchName" value="@Model.FilterOne" />
            Description Search: <input type="search" name="searchDescription" value="@Model.FilterTwo" />
            Address Search: <input type="text" name="searchAddress" value="@Model.FilterThree" />
            <input type="submit" value="Filter" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].IsVisited)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].VisitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].TimesVisited)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].VisitAgain)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Journal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVisited)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesVisited)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitAgain)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
