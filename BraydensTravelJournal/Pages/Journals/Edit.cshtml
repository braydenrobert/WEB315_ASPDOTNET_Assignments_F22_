@page
@model BraydensTravelJournal.Pages.Journals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Journal.Id" />
            <div class="form-group">
                <label asp-for="Journal.Name" class="control-label"></label>
                <input asp-for="Journal.Name" class="form-control" />
                <span asp-validation-for="Journal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Description" class="control-label"></label>
                <input asp-for="Journal.Description" class="form-control" />
                <span asp-validation-for="Journal.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Journal.IsVisited" /> @Html.DisplayNameFor(model => model.Journal.IsVisited)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Journal.address" class="control-label"></label>
                <input asp-for="Journal.address" class="form-control" />
                <span asp-validation-for="Journal.address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.VisitDate" class="control-label"></label>
                <input asp-for="Journal.VisitDate" class="form-control" />
                <span asp-validation-for="Journal.VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.TimesVisited" class="control-label"></label>
                <input asp-for="Journal.TimesVisited" class="form-control" />
                <span asp-validation-for="Journal.TimesVisited" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Journal.VisitAgain" /> @Html.DisplayNameFor(model => model.Journal.VisitAgain)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
